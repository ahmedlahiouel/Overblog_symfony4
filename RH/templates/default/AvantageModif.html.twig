            </tr>
            <tr margin-bottom: 2px;>
                <td>
                    {{ form_label(form.nom_avantage) }}
                </td>
                <td>
                    {{ form_widget(form.nom_avantage, { 'attr': {
                        'placeholder': 'Tapez Nom de L avantage'} }) }}
                </td>
            </tr>

            <tr margin-bottom: 2px;>
                <td>
                    {{ form_label(form.frequence) }}
                </td>
                <td>
                    {{ form_widget(form.frequence, { 'attr': {
                        'placeholder': 'Tapez Frequence'} }) }}
                </td>
            </tr>

            <tr margin-bottom: 2px;>
                <td>
                    {{ form_label(form.combien) }}
                </td>
                <td>
                    {{ form_widget(form.combien, { 'attr': {
                        'placeholder': 'Combien ?'} }) }}
