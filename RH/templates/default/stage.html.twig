{% block ahmed %}

    <font color="#22427C"><h3> Ajouter Candidat </h3></font>

    <center xmlns:margin-bottom="http://www.w3.org/1999/xhtml">

        {{ form_start(form) }}
        <font color="#16B84E"> <h2> Formulaire Stages </h2></font>
        {% for message in app.flashes('success') %}
            <div class="flash-notice">
                {{ message }}
            </div>
        {% endfor %}

        <table >
            <tr margin-bottom: 2px;>
                <td>
                    {{ form_label(form.Debut) }}
                </td>
                <td>
                    {{ form_widget(form.Debut) }}
                </td>
            </tr>
            <tr margin-bottom: 2px;>
                <td>
                    {{ form_label(form.fin) }}
                </td>
                <td>
                    {{ form_widget(form.fin) }}
                </td>
            </tr>
            <tr margin-bottom: 2px;>
                <td>
                    {{ form_label(form.etablissement) }}
                </td>
                <td>
                    {{ form_widget(form.etablissement, { 'attr': {
                        'placeholder': 'Tapez Etablissement'} }) }}
                </td>
            </tr>

            <tr margin-bottom: 2px;>
                <td>
                    {{ form_label(form.objet_description) }}
                </td>
                <td>
                    {{ form_widget(form.objet_description, { 'attr': {
                        'placeholder': 'Tapez Objet Et Description'} }) }}
                </td>
            </tr>










        </table>
        <br>
        <table>
            <tr>
                <td>
                    <div>
                        <input type="submit" value="Ajouter"  class="btn btn-lg btn-success btn-block"
                               style="width: 120px ;height: 50px" />
                    </div>
                    {{ form_end(form) }}

                </td>
            </tr><tr>
                <td><form action="{{ path('gestionuser') }}">
                        <input type="submit" value=" Fin " class="btn btn-lg btn-success btn-block"
                               style="width: 120px ;height: 50px"/></form> </td>
            </tr>
        </table>

    </center>













{% endblock ahmed %}
